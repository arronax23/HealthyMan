@model HealthyMan.Models.Settings
@{
    ViewData["Title"] = "Index";
}

<h1>Settings</h1>
<div class="row">
    <div class="col-sm-3">
        <a asp-area="Admin" asp-controller="Settings" asp-action="SetDefaultSettings" class="btn btn-danger">Reset settings (Default settings)</a>
        <form asp-area="Admin" asp-controller="Settings" asp-action="SaveSettings" class="mt-3">
            <div class="form-group">
                <label asp-for="InitialThreshold" class="control-label"></label>
                <input asp-for="InitialThreshold" class="form-control" />
                <span asp-validation-for="InitialThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThresholdAmplitudePercentage" class="control-label"></label>
                <input asp-for="ThresholdAmplitudePercentage" class="form-control" />
                <span asp-validation-for="ThresholdAmplitudePercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovMeanRespiratoryRateWindowLength" class="control-label"></label>
                <input asp-for="MovMeanRespiratoryRateWindowLength" class="form-control" />
                <span asp-validation-for="MovMeanRespiratoryRateWindowLength" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>