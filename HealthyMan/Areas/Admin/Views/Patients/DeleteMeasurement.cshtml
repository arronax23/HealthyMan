@model Measurement

@{
    ViewData["Title"] = "PulseMeasurement";
}

<h1>Measurement</h1>
<h3 style="color: red">Are you sure you want to delete this?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient.PatientId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient.PatientId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient.FirstName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient.FirstName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient.LastName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient.LastName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Patient.BirthDate)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Patient.BirthDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.MeasurementId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.MeasurementId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.HeartRateAverage)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.HeartRateAverage)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TimeStamp)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TimeStamp)
    </dd>
</dl>
<hr />
<div id="pulse_chart"
     style="width: 1110px; height: 500px; margin: auto;"></div>
<div id="gsr_chart"
     style="width: 1110px; height: 500px; margin: auto;"></div>
<div id="diff_chart"
     style="width: 1110px; height: 500px; margin: auto;"></div>
<hr />
<a asp-action="Measurement" asp-route-id="@Model.MeasurementId" class="btn btn-primary">Cancel</a> |
<a asp-action="DeleteMeasurementConfirmed" asp-route-measurementId="@Model.MeasurementId" asp-route-patientId="@Model.Patient.PatientId" class="btn btn-danger">Delete measurement</a>

@section Scripts{
    <script type="text/javascript"
            src="~/lib/google-charts/loader.js"></script>
    <script src="~/js/mean.js"></script>
    <script src="~/js/calcMovMean.js"></script>
    <script>
        let model = @Html.Raw(Json.Serialize(Model));
    </script>
    <script src="~/js/rednerLineCharts.js"></script>
}