@using Microsoft.AspNetCore.Identity
@using HealthyMan.Data
@inject SignInManager<ApplicationUser> SignInManager

    <ul class="navbar-nav flex-grow-1">
        @if (SignInManager.IsSignedIn(User))
        {
            if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Admin" asp-controller="Patients" asp-action="Index">Patients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Admin" asp-controller="Pulse" asp-action="Index">Pulse</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Admin" asp-controller="GSR" asp-action="Index">GSR</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Admin" asp-controller="RespiratoryRate" asp-action="Index">Respiratory rate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Admin" asp-controller="Calendar" asp-action="Index">Calendar</a>
                </li>
            }
            else if (User.IsInRole("Patient"))
            {
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Patient" asp-controller="Pulse" asp-action="Index">Pulse</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Patient" asp-controller="GSR" asp-action="Index">GSR</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Patient" asp-controller="RespiratoryRate" asp-action="Index">Respiratory rate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" asp-area="Patient" asp-controller="Calendar" asp-action="Index">Calendar</a>
                </li>
            }
        }
    </ul>